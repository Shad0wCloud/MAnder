<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ProfileController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../source/fon2.jpg" />
         </image>
      </ImageView>
      <Pane fx:id="fotopane" layoutX="32.0" layoutY="92.0" prefHeight="244.0" prefWidth="168.0">
         <children>
            <ImageView fx:id="foto" fitHeight="244.0" fitWidth="168.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </Pane>
      <TextField fx:id="namefield" layoutX="226.0" layoutY="102.0" promptText="Name" />
      <TextField fx:id="countryfield" layoutX="226.0" layoutY="152.0" promptText="Country" />
      <TextField fx:id="cityfield" layoutX="226.0" layoutY="201.0" promptText="City" />
      <TextField fx:id="agefield" layoutX="226.0" layoutY="248.0" promptText="Age" />
      <TextArea fx:id="infofield" layoutX="32.0" layoutY="360.0" prefHeight="121.0" prefWidth="348.0" promptText="More information about you" />
      <Button fx:id="loadbutton" layoutX="226.0" layoutY="304.0" mnemonicParsing="false" onAction="#selectFile" style="-fx-background-radius: 10; -fx-background-color: orange;" text="Выбор файла" >
          <font>
              <Font name="Comic Sans MS" />
          </font>
      </Button>
      <Button fx:id="savebutton" layoutX="140.0" layoutY="518.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="121.0" style="-fx-background-radius: 10; -fx-background-color: orange;" text="Save changes">
         <font>
            <Font name="Comic Sans MS" size="15.0" />
         </font>
      </Button>
      <Button fx:id="backbutton" layoutX="217.0" layoutY="14.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="168.0" style="-fx-background-radius: 10; -fx-background-color: orange;" text="Back to search your love ">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
